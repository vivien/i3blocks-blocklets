FORMAT=${FORMAT:-png}
SAVE_DIR=${SAVE_DIR:-$HOME}

echo $SAVE_DIR > ~/test

case $BLOCK_BUTTON in
	1) sleep 0.2 && import $SAVE_DIR/screenshot_$(date "+%Y%m%d_%H%M%S").$FORMAT ;;
	3) sleep 0.5 && import -window root $SAVE_DIR/screenshot_$(date "+%Y%m%d_%H%M%S").$FORMAT ;;
	# screenshot will be overwritten if multiple within a second.
	# Using nanoseconds format is too much
esac
